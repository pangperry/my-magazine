<div class="row category_nav">
  <div class="col-md-2 logo"><img src="<%= image_url "daft_logo.png" %>" class="img-responsive"/></div>

  <div class="col-md-8 col-md-offset-1">
    
    <div class="row category-list <%= @category %>">

      <div class="col-md-2 category-item category-tech">

        <%= link_to category_path('tech') do %>
          <img src="<%= image_url "nav_tech.png" %>" class="img-responsive"/>
        <% end %>

      </div>
      
      <div class="col-md-2 category-item category-finance">
        <a href="/category/finance"><img src="<%= image_url "nav_finance.png" %>" class="img-responsive"/></a>
      </div>
      
      <div class="col-md-2 category-item category-art">
        <a href="/category/art"><img src="<%= image_url "nav_art.png" %>" class="img-responsive"/></a>
      </div>
      
      <div class="col-md-2 category-item category-music">
        <a href="/category/music"><img src="<%= image_url "nav_music.png" %>" class="img-responsive"/></a>
      </div>
      
      <div class="col-md-2 category-item category-food">
        <a href="/category/food"><img src="<%= image_url "nav_food.png" %>" class="img-responsive"/></a>
      </div>
      
      <div class="col-md-2 category-item category-culture">
        <a href="/category/culture"><img src="<%= image_url "nav_culture.png" %>" class="img-responsive"/></a>
      </div>
      
    </div>
    

  </div>

</div> <!-- category_nav -->

<div class="category-nav-stripes row"></div>
